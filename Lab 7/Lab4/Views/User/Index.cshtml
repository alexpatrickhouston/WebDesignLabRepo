@model IEnumerable<Lab4.Models.View.UserViewModel>

@{
    ViewBag.Title = "Index";
}
<head>

</head>
<h2 class="well">Index</h2>
@if (Model.Count() > 2)
{
    <div class="alert alert-warning alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Warning</strong> You have more than 2 users.
    </div>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div id="currentrow">Please click a row</div>
<table id="people-table" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearsInSchool)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="tablerow">
                <td class="FirstName">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearsInSchool)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary", @style = "color:white" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary", @style = "color:white" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary", @style = "color:white" })|
                    @Html.ActionLink("Pets", "Index", "Pet", new { userId = item.Id }, new { @class = "btn btn-primary", @style = "color:white" })
                </td>
            </tr>
        }
    </tbody>
</table>
<button id="Show" class="btn btn-default">Show</button>
<button id="Hide" class="btn btn-default">Hide</button>
@section Scripts{
    <script>
        $(document).ready(function () {

            $("#Show").click(function () {
                $("#people-table").show();
            });
            $("#Hide").click(function () {
                $("#people-table").hide();
            });
            $(".tablerow").click(function () {
                var value = $(this).find(".FirstName").text().trim();
                $("#currentrow").text(value);
            });

        });
    </script>
}